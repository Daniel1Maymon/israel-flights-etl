# ============================================
# Israel Flights ETL - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# cp env.example .env

# ============================================
# PostgreSQL - Airflow Metadata Database
# ============================================
POSTGRES_AIRFLOW_USER=postgres
POSTGRES_AIRFLOW_PASSWORD=postgres
POSTGRES_AIRFLOW_DB=airflow
POSTGRES_AIRFLOW_PORT=5432

# ============================================
# PostgreSQL - Flights Data Database
# ============================================
POSTGRES_FLIGHTS_USER=daniel
POSTGRES_FLIGHTS_PASSWORD=daniel
POSTGRES_FLIGHTS_DB=flights_db
POSTGRES_FLIGHTS_PORT=5433

# Optional: persist Postgres data on the host filesystem (recommended for "don't lose data" setups).
# If set to an absolute path, Compose will use a bind mount instead of a named Docker volume.
# Examples:
# - macOS: POSTGRES_FLIGHTS_DATA_DIR=/Users/secondbite/docker-volumes/israel-flights-etl/postgres_flights
# - Linux: POSTGRES_FLIGHTS_DATA_DIR=/var/lib/israel-flights-etl/postgres_flights
# POSTGRES_FLIGHTS_DATA_DIR=

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_FERNET_KEY=FB0o_zt4e3Ziq3LdUUO7F2Z95cvFFx16hU8jTeR1ASM=
AIRFLOW_USERNAME=airflow
AIRFLOW_PASSWORD=airflow
AIRFLOW_EMAIL=airflow@airflow.com
AIRFLOW_FIRSTNAME=airflow
AIRFLOW_LASTNAME=airflow
AIRFLOW_WEBSERVER_PORT=8082

# ============================================
# AWS Configuration (for S3 access)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# Optional: enable Postgres backups to S3 after each successful ETL run
# (Airflow task `backup_db` uses these settings)
ENABLE_DB_BACKUPS=false
# S3_BUCKET_NAME=etl-flight-pipeline-bucket

# ============================================
# Application Ports
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=80

# ============================================
# Frontend Configuration
# ============================================
# API URL that frontend will use to connect to backend
# For EC2 deployment, use your EC2 public IP or domain
# Example: http://your-ec2-ip:8000 or http://api.yourdomain.com
VITE_API_URL=http://localhost:8000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Backend CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# For production, add your domain/IP here
# Example: CORS_ORIGINS=http://yourdomain.com,http://www.yourdomain.com,http://YOUR_EC2_IP
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:80,http://localhost:8000
